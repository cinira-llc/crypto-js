{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "include": [
    "./src"
  ]
}
